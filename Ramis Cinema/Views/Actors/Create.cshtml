@model Actor

@{
    ViewData["Title"] = "Lägg till ny skådis";

}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Lägg till en ny skådespelare</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <div class="form-group text-center">
                                        <img class = "border-info rounded-circle" style = "max-width:150px" id ="PFP" />

                </div>
                <div class="form-group">
                    <label asp-for="ImgURL" class=" control-label"></label>
                    <input asp-for="ImgURL" class=" form-control"/>
                    <span asp-validation-for="ImgURL" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Name" class=" control-label"></label>
                    <input asp-for="Name" class=" form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Desc" class=" control-label"></label>
                    <input asp-for="Desc" class=" form-control"/>
                    <span asp-validation-for="Desc" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class =" btn btn-outline-success float-right"/>
                    <a class="btn btn-outline-secondary" asp-action="index">Visa Alla</a>
                </div>
                </form>
               
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PFP');
            output.src = $("#ImgURL").val();
        })
        $("#ImgURL").on("change", function () {
            var output = document.getElementById('PFP');
            output.src = $(this).val();
        })
    </script>
}